# Quickly reload zsh config
alias src='source ~/.zshrc'

# AWS
alias alzip='zip -r lambda-function.zip index.mjs node_modules'
alias alup='aws lambda update-function-code \
	--zip-file fileb://lambda-function.zip \
	--function-name'

# Editor
alias nv=nvim

# List files
alias ls='ls --color=auto'
alias ll='ls -alFh'
alias la='ls -A'
alias l='ls -CF'

# Git
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gcm='git commit -m'
alias gd='git diff'
alias gpush='git push'
alias gs='git status'

# Grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Docker
alias dcu='docker compose up -d'
alias dcuf='docker compose up -d --force-recreate'
alias dcl='docker compose logs'
alias dcr='docker compose restart'
alias ds='docker container stats'
alias dps='docker ps'
alias dpsg='docker ps | grep'

# Terraform
alias tf='terraform'

# Ansiweather
alias bom='ansiweather -a false -l Brisbane,AU'